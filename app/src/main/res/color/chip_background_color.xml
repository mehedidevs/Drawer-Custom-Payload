<?xml version="1.0" encoding="utf-8"?>
<!-- res/color/chip_background_color.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected and enabled state -->
    <item android:color="@color/primary" android:state_checked="true" android:state_enabled="true"/>

    <!-- Selected and disabled state -->
    <item android:color="@color/primary_disabled" android:state_checked="true" android:state_enabled="false"/>

    <!-- Not selected and enabled state -->
    <item android:color="@color/surface" android:state_checked="false" android:state_enabled="true"/>

    <!-- Not selected and disabled state -->
    <item android:color="@color/surface_disabled" android:state_checked="false" android:state_enabled="false"/>

    <!-- Default state -->
    <item android:color="@color/surface"/>
</selector>